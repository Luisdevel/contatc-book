<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Cadastro e Login</h1>
      <p class="text-center lead my-3">Cadastre-se ou faça o seu login.</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Faça o seu cadastro abaixo:</p>

          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Digite o seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Digite a senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
          </form>

        </div>
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se você já tem uma conta, faça login abaixo:</p>

          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Digite o seu e-mail cadastrado</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Digite a sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Logar</button>
          </form>

        </div>
      </div>
      
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>